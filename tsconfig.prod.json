{
  "extends": "./tsconfig.json",  
    "compilerOptions": {
      "target": "es2022",
      "lib": ["es2022", "dom"],
      "moduleResolution": "node",
      "types": ["node"],
      "module": "commonjs",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "outDir": "./dist",
      "rootDir": ".",
      "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tests"]
  }
  

